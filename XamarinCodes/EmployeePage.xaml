<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="XamarinTimesheet.EmployeePage" BackgroundColor="Black" HeightRequest="40">

    <!--- Stack layout pinoaa elementit päällekkäin-->
    
    <StackLayout>

        <Button Text="Aloita painamalla tästä" TextColor="White" Clicked="LoadEmployees" Padding="25" CornerRadius="5" BackgroundColor="black" HorizontalOptions="Center"
                BorderColor="Orange" BorderWidth="1"
           VerticalOptions="CenterAndExpand" >
        </Button>

        <Label  Text="...sitten valitse nimesi listalta:" HorizontalOptions="Center" TextColor="Orange" ></Label>

        <ListView Margin="30" x:Name="employeeList" SeparatorColor="red" BackgroundColor="black" />

        <Button Text="Jatka työtehtäviin" Clicked="LoadAssignmentPage" CornerRadius="5" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
                BackgroundColor="black" TextColor="white" BorderColor="Lime" BorderWidth="1" Padding="25">
        </Button>
                

    </StackLayout>

</ContentPage>
